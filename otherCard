// transferPaymentCore2.js
var initTransferPayment = function() {
    initEventListeners();
}

function initEventListeners() {
    $("#otherCard").off("click").click(function() {
            AjaxOtherCard();
        });

function AjaxOtherCard() {
    console.log("Routing to #sendMoney");
    showLoader();
    $.ajax({
        url: "sendMoney", // = url link to controller
        type: "POST",
        cache: false,
        data: "{}",
        contentType: "application/json; charset=utf-8",
        success: function (result) {
            checkHtmlContent(result);
            hideLoader();
        },
        error: function (result) {
            console.log("Error when routing to #otherCard");
            hideLoader();
            displayErrorPopup(generalErrorMessage);
        }
    });
}

// mainMenuController.java
	@PostMapping(value = {"/cardPayment-otherCard"}) // = url link to index.js file
	public String otherCard(Locale locale, Model model, HttpServletRequest request, HttpServletResponse response,
							@RequestAttribute(Req.CUSTOMER_INFO) CustomerInfo custInfo,
							@RequestAttribute(Req.PBE_REQ) Map<String, Object> reqBody) {

		logger.info("Entering Other Card.....");

		super.setJavascriptDateTimeToModel(model);
		model.addAttribute(ModelAttributes.LANGUAGES, multiLingualController.getJSONData(request, response, PBeFunctions.APPLY));
		model.addAttribute(ModelAttributes.DISPLAY_NAME, custInfo.getName());

		return "mainMenu/cardPaymentOtherCardForm";
	}
